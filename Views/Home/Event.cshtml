@{
    ViewBag.Title = "Events";
}

<div class="row">
    <h1>Events</h1>
    <div class="col-xs-12">
        <table id="user-table" class=" table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>From</th>
                    <th>Content</th>
                    <th>Created Date</th>
                </tr>
            </thead>
            <tbody>
                @{ foreach (var ev in ViewBag.Events)
                    {

                        <tr>
                            <td>@ev.FromNumber</td>
                            <td>@ev.Content</td>
                            <td>@ev.CreatedDate</td>
                        </tr>
                    }}
            </tbody>
        </table>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#user-table').DataTable();
    });
</script>